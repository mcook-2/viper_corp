<div class="container">
  <main role="main" class="mt-4">
    <div class="jumbotron">
      <h1 class="display-4">Welcome to Our E-Commerce Store!</h1>
      <p class="lead">Browse our products and enjoy shopping online.</p>
      <%= link_to 'Browse Products', products_path, class: 'btn btn-primary btn-lg' %>
    </div>

    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="card">
            <%= image_tag product.images.first.url || 'https://via.placeholder.com/150', class: 'card-img-top', alt: 'Product image' %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description.truncate(100) %></p>
              <%= link_to 'View Details', product_path(product), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </main>

  <footer class="bg-light py-3 mt-4">
    <div class="container">
      <p class="text-center mb-0">Â© 2024 E-Commerce Store</p>
    </div>
  </footer>
</div>
