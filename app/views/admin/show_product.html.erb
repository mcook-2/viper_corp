<div class="container-fluid mt-5">
  <div class="d-flex justify-content-between mb-3">
    <%= link_to 'Back', admin_products_path, class: 'btn btn-secondary' %>
    <%= link_to "Edit", admin_edit_product_path(@product), class: 'btn btn-warning' %>
  </div>

  <!-- Product Detail View -->
  <div class="row">
    <% if @product %>
      <!-- Sidebar with Thumbnails -->
      <div class="col-md-8 d-md-block">
        <div class="row">
          <% @product.images.first(6).each do |image| %>
            <div class="col-6 mb-2">
              <%= image_tag image.url, alt: @product.name, class: 'img-thumbnail img-fluid' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-md-4">
        <!-- Main Image Carousel for Small Screens -->
        <div id="productImagesCarousel" class="carousel slide d-md-none" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% @product.images.first(6).each_with_index do |image, index| %>
              <div class="carousel-item <%= 'active' if index == 0 %>">
                <%= image_tag image.url, alt: @product.name, class: 'd-block w-100' %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#productImagesCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#productImagesCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        <!-- Product Information -->
        <div class="mt-3">
          <h1 class="display-4"><%= @product.name %></h1>
          <h5 class="text-muted"><%= number_to_currency(@product.product_prices.first.price) %></h5>
          <p><strong>Description:</strong></p>
          <p><%= @product.description %></p>
          <p><strong>Features:</strong></p>
          <ul>
            <% @product.features.split(',').each do |feature| %>
              <li><%= feature.strip %></li>
            <% end %>
          </ul>
          <p><strong>Category:</strong> <%= @product.category.name %></p>
          <p><strong>Brand:</strong> <%= @product.brand.name %></p>
          <p><strong>Stock:</strong> <%= @product.stock_quantity %></p>
          <div class="d-flex justify-content-between mt-3">
            <%= link_to 'Back to Products', admin_products_path, class: 'btn btn-secondary' %>
            <!-- Optionally, you can add more buttons here -->
          </div>
        </div>
      </div>
    <% else %>
      <p>Product not found.</p>
    <% end %>
  </div>
</div>
